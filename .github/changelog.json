{
  "resolve": "commits",
  "sort": "asc",

  "template": ".github/changelog_template.md",

  "groupings": [
    { "name":  "New Features", "patterns":  [ "(?i)^new\\b" ] },
    { "name":  "Fixes", "patterns":  [ "(?i)^fix\\b" ] },
    { "name":  "Misc", "patterns":  [ ".*" ] }
  ],
  "exclude": [
    "^test\\b",
    "^docs\\b",
    "^(?i)refactor\\b",
    "^(?i)release\\s+\\d+\\.\\d+\\.\\d+",
    "^(?i)minor fix\\b",
    "^(?i)no comment\\b",
    "^(?i)wip\\b"
  ],

  "local": false,

  "max_commits": 250
}